<h1 class="text-center mt-4">Log In</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
  
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light"%>
          <div class="col-10 mb-3">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Digite o seu e-mail" %> 
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light"%>
          <div class="col-10 mb-3">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Digite sua senha" %> 
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <div class="col-2 mb-3">
            <%= f.submit "Log In", class: "btn btn-outline-light btn-lg" %> 
          </div>
        </div>

      <% end %>
      </div>

      <div class="mb-3 text-center">
        <%= link_to '[Voltar Ã  lista de artigos]', articles_path, class: "text-black" %>
      </div>
  </div>
</div>