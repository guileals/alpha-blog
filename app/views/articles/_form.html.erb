<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

      <%= render 'shared/errors', obj: @article %>
  
      <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
        
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10 mb-3">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Título do artigo" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light"%>
          <div class="col-10 mb-3">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Descrição do artigo" %> 
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <div class="col-2 mb-3">
            <%= f.submit class: "btn btn-outline-light btn-lg" %> 
          </div>
        </div>

      <% end %>
      </div>

      <div class="mb-3 text-center">
        <%= link_to '[Voltar à lista de artigos]', articles_path, class: "text-black" %>
      </div>
  </div>
</div>